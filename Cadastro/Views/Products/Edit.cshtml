@model Cadastro.ViewModels.ProductTransferModel

@{
    ViewData["Title"] = "Novo Produto";
}



<h1>Novo Produto</h1>

<h4>Dados do Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Product.Id" hidden/>

            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" placeholder="Digite um nome." class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Value" class="control-label"></label>
                <input asp-for="Product.InputValue" placeholder="0.00" class="form-control" />
                <span asp-validation-for="Product.InputValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{
                    if (Model.Clients.Count() == 0)
                    {
                        <span class="text-danger">Cadastre pelo menos um cliente.</span>
                    }
                }
                <label asp-for="Product.ClientId" class="control-label"></label>
                <select asp-for="Product.ClientId" class="form-control" asp-items="@(new SelectList(Model.Clients,"Id","Name"))"></select>
                <span asp-validation-for="Product.ClientId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Product.Available" /> @Html.DisplayNameFor(model => model.Product.Available)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}